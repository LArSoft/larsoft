# build everything that does not depend on art

basequal=${1}

build_bundle nubase-@NUDIST_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of nubase-@NUDIST_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

do_build marley @MARLEY_VERSION@ ${basequal}
do_build pandora @PANDORA_VERSION@ ${basequal}
prep_build -f NULL eigen @EIGEN_VERSION@; add_to_manifest
do_build jsoncpp @JSONCPP_VERSION@ ${basequal}
do_build jsonnet @JSONNET_VERSION@ ${basequal}
do_build wirecell @WIRECELL_VERSION@ ${basequal}
if [ "${basequal}" = "e15" ]; then # cannot build for c2 yet
  do_build protobuf @PROTOBUF_VERSION@ ${basequal}
  do_build tensorflow @TENSORFLOW_VERSION@ ${basequal}:p2714b
fi

# add to manifest if no build - larsoft_data
prep_build -f NULL ifdhc_config @IFDHC_CONFIG_VERSION@; add_to_manifest
prep_build -f NULL larsoft_data @LARSOFT_DATA_VERSION@; add_to_manifest

return 0
