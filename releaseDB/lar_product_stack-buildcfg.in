# build everything that does not depend on art

basequal=${1}

build_bundle nubase-@NUDIST_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of nubase-@NUDIST_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

do_build marley @MARLEY_VERSION@ ${basequal}
do_build pandora @PANDORA_VERSION@ ${basequal}:nu
prep_build range @RANGE_VERSION@; add_to_manifest
prep_build eigen @EIGEN_VERSION@; add_to_manifest
do_build jsoncpp @JSONCPP_VERSION@ ${basequal}
do_build wirecell @WIRECELL_VERSION@ ${basequal}

# add to manifest if no build - larsoft_data, mrb
prep_build ifdhc_config @IFDHC_CONFIG_VERSION@; add_to_manifest
prep_build larsoft_data @LARSOFT_DATA_VERSION@; add_to_manifest
prep_build mrb @MRB_VERSION@; add_to_manifest

return 0
