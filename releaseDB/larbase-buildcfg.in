# build everything except larsoft itself

basequal=${1}

build_bundle nu-@NUDIST_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of nu-@NUDIST_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

ensure_cetbuildtools v5_04_02

do_build pandora @PANDORA_VERSION@ ${basequal}:nu
build_cet larpandoracontent @LARPANDORACONTENT_VERSION@ ${basequal}

# add to manifest if no build - larsoft_data, mrb
prep_build genie_xsec v2_10_6a effspec-tem; add_to_manifest
prep_build larsoft_data @LARSOFT_DATA_VERSION@; add_to_manifest
prep_build gitflow @GITFLOW_VERSION@; add_to_manifest
prep_build mrb @MRB_VERSION@; add_to_manifest

return 0
